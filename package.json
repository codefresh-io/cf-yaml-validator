    "js-yaml": "^3.8.2",
    "lodash": "^4.17.4"
  },
  "devDependencies": {
    "chai": "^3.0.0",
    "eslint": "^5.12.1",
    "ci-publish": "^1.3.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.15.0",
    "eslint-plugin-jsx-a11y": "^6.2.0",
    "eslint-plugin-mocha": "^5.2.1",
    "eslint-plugin-react": "^7.12.4",
    "jest": "^24.0.0",
    "sinon": "^1.17.6",
    "sinon-chai": "^2.8.0"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 95,
        "lines": 90,
        "statements": 90
      }
    }
